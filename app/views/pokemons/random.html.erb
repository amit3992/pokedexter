<div class="max-w-md mx-auto mt-8 p-6 rounded-2xl shadow">
  <% if @pokemon.present? %>
    <div id="card" data-controller="catcher" data-catcher-pokemon-id-value="<%= @pokemon[:poke_id] %>">
      <div class="flex items-center gap-4">
        <img src="<%= @pokemon[:sprite_url] %>" alt="<%= @pokemon[:name] %>" class="w-20 h-20" />
        <div>
          <h2 class="text-xl font-semibold"><%= @pokemon[:name].capitalize %></h2>
          <p class="text-sm text-gray-600">Base EXP: <%= @pokemon[:base_experience] %></p>
        </div>
      </div>

      <div class="mt-4 flex gap-3">
        <button
          data-action="click->catcher#catch"
          class="px-4 py-2 rounded-2xl shadow">
          🎯 Catch
        </button>

        <a href="/pokemon/random" class="px-4 py-2 rounded-2xl shadow">🔁 New Pokémon</a>
        <a href="/caught" class="px-4 py-2 rounded-2xl shadow">🧺 Your Catches</a>
      </div>

      <div id="result" class="mt-3 text-sm"></div>
    </div>
  <% else %>
    <p>Could not load a Pokémon right now.</p>
  <% end %>
</div>