<div class="max-w-2xl mx-auto mt-8 space-y-3">
  <h1 class="text-2xl font-bold">Your Pokémon</h1>
  <% @caught.each do |p| %>
    <div class="p-4 rounded-2xl shadow flex items-center gap-3">
      <img src="<%= p.sprite_url %>" alt="<%= p.name %>" class="w-12 h-12" />
      <div>
        <div class="font-semibold"><%= p.name.capitalize %> (#<%= p.poke_id %>)</div>
        <div class="text-sm text-gray-600">Base EXP: <%= p.base_experience %> • <%= p.caught_at&.strftime("%b %d, %Y %H:%M") %></div>
      </div>
    </div>
  <% end %>
</div>